@model ITGDevices.Models.ItemOperation
<style>
    .f {
        margin-top: 120px;
    }
</style>

@{ ViewData["Title"] = "Accept/Reject";
    Layout = "_LayoutAccept"; }




<form class="f" method="post">
    <input type="hidden" asp-for="item.ID" />
    <input type="hidden" asp-for="requester.ID" />
    <input type="hidden" asp-for="holder.ID" />
    <input type="hidden" asp-for="UserItemRequest.ID" />



    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3"> @Html.DisplayFor(model => model.requester.username) want to use @Html.DisplayFor(model => model.item.Name)</h2>
        </div>

        <div class="row">

            <div class="col-8">
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" asp-controller="DevicesRequest" asp-action="Accept" class="btn btn-info w-100" value="Approve" />
                        </div>
                        <div class="col">
                            <input type="submit" asp-controller="DevicesRequest" asp-action="Reject" class="btn btn-info w-100" value="Reject" />
                        </div>

                    </div>

                </div>

                <div class="col-4">
                    @*Keep this empty*@
                </div>



            </div>


        </div>

    </div>

</form>













                @section Scripts{
                    @{ //client side validation
    <partial name="_ValidationScriptsPartial" /> }



                }














