@model ITGDevices.Models.ItemOperation
<style>
    .f {
        margin-top: 120px;
    }
</style>

@{ ViewData["Title"] = "Create";
    Layout = "_Layoutadmin"; }


@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@if (HttpContextAccessor.HttpContext.Session.GetString("role2") == "out")
{
<h1>Hi, @HttpContextAccessor.HttpContext.Session.GetString("firstname")</h1> }
else
{

<form class="f" method="post" asp-action="Create" asp-controller="Devices">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Item</h2>
        </div>

        <div class="row">

            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Serial Number</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="item.SerialNumber" class="form-control" />
                        <span asp-validation-for="item.SerialNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="item.Model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="item.Model" class="form-control" />
                        <span asp-validation-for="item.Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="item.Manufacturer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="item.Manufacturer" class="form-control" />
                        <span asp-validation-for="item.Manufacturer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="item.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="item.Name" class="form-control" />
                        <span asp-validation-for="item.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="item.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="item.Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="item.PurchaseDate"></label>

                    </div>
                    <div class="col-8">
                        <input type="date" asp-for="item.PurchaseDate" class="form-control" />
                        <span asp-validation-for="item.PurchaseDate" class="text-danger"></span>


                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryID">Category</label>

                    </div>
                    <div class="col-8">
                        <select required asp-for="CategoryID" class="form-control">
                            @foreach (Category c in Model.categories??new List<Category>())
                            {
            <option value=@c.ID selected="true"> @c.Name</option>}
                        </select>

                       

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ManagerID">Manager</label>

                    </div>
                    <div class="col-8">
                       

                        <select required asp-for="ManagerID" class="form-control">

                            @foreach (User c in Model.managers ?? new List<User>())
                            {
                        <option value=@c.ID selected="true"> @c.FirstName</option>
                                break;
                            }



                        </select>

                    </div>
                </div>






                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">

                            <a asp-action="Index" asp-controller="Devices" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>

                    </div>

                </div>

                <div class="col-4">
                    @*Keep this empty*@
                </div>



            </div>


        </div>

    </div>

</form>













                @section Scripts{
                    @{ //client side validation
    <partial name="_ValidationScriptsPartial" />
                    }



                }}














