@model IEnumerable<ITGDevices.Models.Item>
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{ ViewData["Title"] = "Index";
    Layout = "_Layoutadmin"; }


<style>
    .f {
        margin-top: 90px;
    }
</style>
<div class="container p-3 f">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items List</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Devices" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Item
            </a>
        </div>
    </div>

    <br /><br />




    @if (HttpContextAccessor.HttpContext.Session.GetString("role2") == "out")
    {
<h1>Hi, @HttpContextAccessor.HttpContext.Session.GetString("firstname")</h1> }
else
{
@if (Model.Count() > 0)
{
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.SerialNumber)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td width="5%">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-route-Id="@item.ID" asp-action="Edit" asp-controller="Devices" class="btn btn-primary mx-2">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-route-Id="@item.ID" asp-action="Details" asp-controller="Devices" class="btn btn-primary mx-2">
                        <i class="fas fa-address-book"></i>
                    </a>
                    <a asp-route-Id="@item.ID" asp-action="Delete" asp-controller="Devices" class="btn btn-danger mx-2">
                        <i class="far fa-trash-alt"></i>
                    </a>

                </div>

            </td>
        </tr>}


    </tbody>
</table> }
else
{
<p>No Item exists.</p>}}

</div>

